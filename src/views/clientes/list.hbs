<div id="main-content">
    <div class="container-fluid">
         
        <div class="block-header">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-12">
                    <h2><a href="/pv/add" class="btn btn-xs btn-link btn-toggle-fullwidth"></a> Clientes</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/pv/add"><i class="icon-home"></i></a></li>
                        <li class="breadcrumb-item active">Clientes</li>
                    </ul>
                </div>            
            </div>
        </div>
           {{>message}} 
        <!-- CONTENIDO -->
        <div class="row clearfix">
             <div class="col-lg-12">
                    <div class="card">
                        <div class="header d-flex justify-content-between">
                            <h2>Lista de Clientes</h2>
                            <a href="/clientes/add" class="btn btn-success"><i class="fa fa-user-plus"></i> Añadir</a>
                        </div>
                        <div class="body">                    
                            <div class="table-responsive">
                                <table class="table table-hover" cellspacing="0" id="tablaInventario">
                                    <thead>
                                        <tr>
                                            <th>Nombre Cliente</th>
                                            <th>Número de Teléfono</th>
                                            <th class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                        <tbody id="seccionInventario">
                                            {{#each clientes}}
                                                <tr>
                                                    <td>{{nombreCliente}}</td>
                                                    <td>{{telefonoCliente}}</td>
                                                    {{#checkStatus estatusCliente idCliente}} 
                                                    {{/checkStatus}}
                                                </tr>
                                            {{/each}}
                                        </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
<script>
     $(document).ready(function(){
        $("#menu6").addClass("active");
    });
</script>
<script src="/ajax/clienteAjax.js"></script>